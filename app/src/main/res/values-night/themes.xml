<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night theme -->
    <style name="Base.Theme.FinalProject" parent="Theme.Material3.DayNight">
        <!-- Colours -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/light_accent</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/dark_accent</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <item name="colorSurface">@color/dark_shades</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/dark_accent</item>
        <item name="colorOnSurfaceVariant">@color/light_accent</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/dark_shades</item>

        <!-- Default fonts -->
        <item name="fontFamily">@font/dm_serif_text</item>
        <item name="android:fontFamily">@font/dm_serif_text</item>
    </style>

    <style name="Theme.FinalProject" parent="Base.Theme.FinalProject" />
</resources>