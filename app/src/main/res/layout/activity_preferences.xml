<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_shades">

        <!-- Custom Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@color/main"
            android:minHeight="64dp"
            app:titleCentered="true"
            app:titleTextColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvPreferencesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Your Preferences"
                    android:textAppearance="@style/TextAppearance.FinalProject.Headline.Medium"
                    android:textColor="@color/dark_shades"
                    android:layout_marginBottom="8dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvPreferencesSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose your favorite genres to personalize your experience"
                    android:textColor="@color/dark_shades"
                    android:textSize="14sp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp" />

                <!-- Selected Count -->
                <TextView
                    android:id="@+id/tvSelectedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select at least 1 genre"
                    android:textColor="@color/dark_shades"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Genre Chips Flexbox -->
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexboxGenres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:flexWrap="wrap"
                    app:alignItems="stretch"
                    app:justifyContent="space_around" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSavePreferences"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:text="Save Preferences"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/main"
                    app:cornerRadius="28dp"
                    android:enabled="false" />

                <!-- Skip Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSkip"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Skip for now"
                    android:textColor="@color/dark_shades"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    app:cornerRadius="28dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>