<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="HardcodedText,ContentDescription,SmallSp,UselessParent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    tools:context=".ProfileMainFragment">

    <FrameLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <!-- HEADER -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:background="@drawable/profile_rounded_header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/dm_serif_text"
                android:gravity="center"
                android:text="Settings"
                android:textSize="32sp"
                android:textColor="@color/white" />

        </FrameLayout>

        <!-- BACK BUTTON -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_btn_back"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="start"/>

        <!-- DECORATIONS -->
        <ImageView
            android:layout_width="90dp"
            android:layout_height="116dp"
            android:src="@drawable/profile_header_setting"
            android:layout_marginTop="30dp"
            android:layout_gravity="end"/>
    </FrameLayout>

    <!-- CONTENT -->
    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileHeader">

        <!-- NOTIFICATION SETTINGS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/merriweather_light"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Notification Settings" />

        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_rounded_8dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <!-- PUSH NOTIFICATION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/profile_icon_push" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/merriweather_black"
                    android:textSize="14sp"
                    android:text="Push Notification" />

                <Switch
                    android:id="@+id/switchPush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:trackTint="@color/dark_accent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_shades" />

            <!-- EMAIL NOTIFICATION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/profile_icon_email" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/merriweather_black"
                    android:textSize="14sp"
                    android:text="Email Notification" />

                <Switch
                    android:id="@+id/switchEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:trackTint="@color/dark_accent"/>

            </LinearLayout>
        </LinearLayout>

        <!-- OTHER SETTINGS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/merriweather_light"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Other Settings" />

        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_rounded_8dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <!-- YOUR INTEREST -->
            <LinearLayout
                android:id="@+id/btnInterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/profile_icon_interest" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/merriweather_black"
                    android:textSize="14sp"
                    android:text="Your Interests" />

                <ImageView
                    android:id="@+id/profile_your_interests"
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@drawable/profile_icon_next" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_shades" />

            <!-- LOGOUT -->
            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/profile_icon_delete" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/merriweather_black"
                    android:textSize="14sp"
                    android:text="Logout" />

                <ImageView
                    android:id="@+id/profile_delete"
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@drawable/profile_icon_next" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>