<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main"
            android:paddingTop="50dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="20dp">

            <!-- Centered Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="12dp" />

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Search..."
                        android:background="@null"
                        android:paddingStart="8dp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/black" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Main Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp">

            <!-- Featured Locations Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tvFeaturedLocationsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Featured Locations"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="16dp" />

                <!-- Featured Locations RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFeaturedLocations"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:orientation="horizontal"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_featured_location" />

            </LinearLayout>

            <!-- Fun Fact Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Fun Fact Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fun Fact"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvTapForMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap for more"
                        android:textColor="@color/dark_accent"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- Fun Fact Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <TextView
                        android:id="@+id/tvFunFact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:padding="20dp"
                        android:text="Loading fun fact..."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Personalised For You Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">

                <TextView
                    android:id="@+id/tvPersonalisedHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personalised For You"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="16dp" />

                <!-- Personalised Tours RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPersonalisedTours"
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_tour_card" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>