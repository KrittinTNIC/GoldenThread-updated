<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject" parent="Theme.Material3.DayNight">
        <!-- Colours -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorPrimaryContainer">@color/light_accent</item>
        <item name="colorOnPrimaryContainer">@color/dark_shades</item>

        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/light_accent</item>
        <item name="colorOnSecondaryContainer">@color/dark_shades</item>

        <item name="colorSurface">@color/light_shades</item>
        <item name="colorOnSurface">@color/dark_shades</item>

        <!-- Default font -->
        <item name="fontFamily">@font/dm_serif_text</item>
        <item name="android:fontFamily">@font/dm_serif_text</item>

        <!-- Header -->
        <item name="android:statusBarColor">@color/main</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- to hide -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Button -->
        <item name="materialButtonStyle">@style/Widget.FinalProject.Button</item>

        <!-- Text appearances-->
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.FinalProject.Headline.Medium</item>
    </style>

    <style name="Theme.FinalProject" parent="Base.Theme.FinalProject" />

    <!-- button styling -->
    <style name="Widget.FinalProject.Button" parent="Widget.Material3.Button">
    <item name="backgroundTint">@color/white</item>
    <item name="android:textColor">@color/black</item>
    <item name="cornerRadius">8dp</item>
    <item name="strokeColor">@color/black</item>
    <item name="strokeWidth">1dp</item>
    </style>

        <!-- text styling-->
    <style name="TextAppearance.FinalProject.Headline.Medium" parent="TextAppearance.Material3.HeadlineMedium">
    <item name="fontFamily">@font/dm_serif_text</item>
    <item name="android:textColor">@color/dark_shades</item>
    </style>

</resources>